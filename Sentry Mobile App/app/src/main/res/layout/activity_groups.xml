<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GroupsActivity">

    <TextView
        android:id="@+id/tv_groups_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/title_activity_groups"
        android:background="@color/colorBackground"
        android:textColor="@color/textColor"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ListView
        android:id="@+id/lv_groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_populate_groups"
        android:layout_marginTop="20dp"
        android:background="@color/colorTextBox"
        android:textColor="@color/textColor"
        android:clickable="false"
        android:fastScrollEnabled="true"/>
      <!--  android:listSelector="@drawable/list_selector"
        />
-->

    <Button
        android:id="@+id/btn_populate_groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_groups_title"
        android:layout_marginTop="15dp"
        android:background="@color/colorSentryAccent"
        android:textColor="@color/textColor"
        android:text="@string/btn_populate_groups"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
